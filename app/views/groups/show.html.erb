<div class="group">
  <%= link_to("New a post", new_group_post_path(@group), class: "btn btn-default pull-right") %>
  <% if current_user && current_user == @group.user %>
    <%=  link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right") %>
  <% end %>
</div>
<h2><%= @group.title %></h2>
<p><%= @group.description %></p>
<table class="table table">
  <thead>
    <tr>
      <td>Post Content</td>
      <td>Creator</td>
      <td>Created_at</td>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.user.email %></td>
        <td><%= post.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
